<mvc:View controllerName="ap.salesorder.controller.Main"
    xmlns="sap.m"
	xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core" displayBlock="true">
    <f:DynamicPage id="page">
        <f:header>
            <f:DynamicPageHeader>
                <f:content>

                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Button icon="sap-icon://activities" type="Transparent" press="onNavToSalesOrderItems" text="Nav to Sales Order Items" />
    <!-- salesOrderSet, sales Oeders -->
            <Table
                id="salesOrderTable"
                
                items="{/SalesOrderSet}"
 
            >
            <headerToolbar>
				<OverflowToolbar>
					<Title text="SalesOrder" level="H2"/>
					<ToolbarSpacer/>
                    <Button icon="sap-icon://excel-attachment" press="onExport"/>
					<Button
						tooltip="Sort"
						icon="sap-icon://sort"
						press="handleSortButtonPressed"/>
					<Button
						tooltip="Filter"
						icon="sap-icon://filter"
						press="handleFilterButtonPressed"/>

				</OverflowToolbar>
			</headerToolbar>
<!-- OrderId, ERDAT,... -->
                <columns>
                    <Column
                        id="VbelnCol"
                        width="12em"
                    >
                        <VBox>
                            <Text text="Vbeln" />
                        </VBox>
                    </Column>
                    <Column
                        id="Erdat" minScreenWidth="Tablet" demandPopin="true" hAlign="End"
                    >
                        <Text text="Erdat" />
                    </Column>
                   
                </columns>
                <items>
                     <ColumnListItem type="Navigation" vAlign="Middle" press=".onListItemPress">
                        <cells>
                            <ObjectIdentifier text="{Vbeln}"/>
                            <Text text="{Erdat}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
