<mvc:View controllerName="ap.salesorder.controller.SalesOrderDetail" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" xmlns:m="sap.m" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form">
    <ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" alwaysShowContentHeader="true" preserveHeaderStateOnScroll="false" headerContentPinnable="true" isChildPage="true" upperCaseAnchorBar="false" binding="{/SalesOrderSet}">
        <headerTitle>
            <ObjectPageHeader objectTitle="{Vbeln}" objectSubtitle="{Erdat}" isObjectSubtitleAlwaysVisible="false" isObjectTitleAlwaysVisible="false">
                <!-- Additional header content can be added here -->
            </ObjectPageHeader>
        </headerTitle>
        <headerContent>
            <m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
                <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                    <!-- Add any additional header content -->
                </m:VBox>
            </m:FlexBox>
        </headerContent>
        <sections>
            <ObjectPageSection title="Sales">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <!-- Display Sales Order number and Created Date -->
                            <m:VBox>
                                <m:Label text="Sales Order Number" />
                                <m:Text text="{Vbeln}" />

                                <m:Label text="Created Date" />
                                <m:Text text="{Erdat}" />
                            </m:VBox>

                            <!-- Display Sales Order Items -->
                            <m:Table id="SalesOrderItemsTable" items="{SalesOrderSet>SalesOrderItemsSet/results}">
                                <m:columns>
                                    <m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                                        <m:Text text="Item Number" />
                                    </m:Column>
                                    <m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                                        <m:Text text="Quantity" />
                                    </m:Column>
                                    <m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                                        <m:Text text="Unit" />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem type="Navigation" vAlign="Middle" press=".onListItemPress">
                                        <m:cells>
                                            <m:Text text="{Posnr}" />
                                            <m:Text text="{Lfimg}" />
                                            <m:Text text="{Vrkme}" />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
