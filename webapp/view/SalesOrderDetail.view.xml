<mvc:View
    controllerName="ap.salesorder.controller.SalesOrderDetail"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form">
    <ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="true"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
        <headerTitle>
			<ObjectPageHeader objectTitle="{Name}"
				objectSubtitle="{Vbeln}" isObjectSubtitleAlwaysVisible="false" isObjectTitleAlwaysVisible="false">

			</ObjectPageHeader>
		</headerTitle>
        <headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="{Erdat}"/>
				</m:VBox>
                
			</m:FlexBox>
		</headerContent>
        <sections>
			<ObjectPageSection title="Sales">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
                id="SalesOrderItemsTable"
				items="{/SalesOrderSet('134999')/SalesOrderItemsSet}"
            >	

                <m:columns>
                    <m:Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <m:Text text="Sales Order number" />
                    </m:Column>
                    <m:Column
                        id="custcityCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <m:Text text="Distribution Channel" />
                    </m:Column>
                </m:columns>
                <m:items>
                    <m:ColumnListItem type="Navigation" vAlign="Middle" press=".onListItemPress">
                        <m:cells>
                            <m:Text text="{Vbeln}" />
                            <m:Text text="{Posnr}" />
                            <m:Text text="{Lifmg}" />
                            <m:Text text="{Vrkme}" />

                        </m:cells>
                    </m:ColumnListItem>
                </m:items>
            </m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>