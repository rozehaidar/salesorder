<mvc:View controllerName="ap.salesapp.controller.Offer"
    xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Page id="page">
        <content>
            <Button icon="sap-icon://SalesOrder-and-contacts" text="Nav to SalesOrder" type="Transparent" press="onNavToSalesOrder" />
            <Table
                id="SalesOrderItemsTable"
                items="{path: '/SalesOrderItemsSet', sorter: { path: 'Creadate', descending: false}, parameters: {expand: 'OfferMaterials'}}}"
            >
            <headerToolbar>
				<OverflowToolbar>
					<Title text="SalesOrderItems" level="H2"/>
					<ToolbarSpacer/>
					<!-- <Button
						tooltip="Sort"
						icon="sap-icon://sort"
						press="handleSortButtonPressed"/>
					<Button
						tooltip="Filter"
						icon="sap-icon://filter"
						press="handleFilterButtonPressed"/>
						press="handleFilterButtonPressed"/> -->
				</OverflowToolbar>
			</headerToolbar>
                <columns>
                    <Column
                        width="12em"
                    >
                        <VBox>
                            <Text text="ID" />
                        </VBox>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Sales Order Id" />
                    </Column>
                    <Column
                        id="custpostalcodeCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Creation " />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" vAlign="Middle" press=".onListItemPress">
                        <cells>
                            <ObjectIdentifier
                                title="{Name}"
                                text="{Vbeln}"
                            />
                            <Text text="{Posnr}" />
                            <Text text="{Lifmg}" />
                            <Text text="{Vrkme}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table> 
        </content>
    </Page>
</mvc:View>